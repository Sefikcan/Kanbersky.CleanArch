services:
  basketdb:
    container_name: basketdb
    image: redis
    ports:
    - published: 6379
      target: 6379
    restart: always
  catalogdb:
    container_name: catalogdb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - /site:/data/db:rw
  kanbersky.cleanarch.apigateway:
    build:
      context: D:\WorkSpaces\Back-end\Microservices\Kanbersky.CleanArch
      dockerfile: src/ApiGateway/Kanbersky.CleanArch.ApiGateway/Dockerfile
    container_name: apigateway
    depends_on:
      kanbersky.cleanarch.basket.api:
        condition: service_started
      kanbersky.cleanarch.catalog.api:
        condition: service_started
      kanbersky.cleanarch.order.api:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: kanberskycleanarchapigateway
    ports:
    - published: 7000
      target: 80
    volumes:
    - /.aspnet/https:/root/.aspnet/https/:rw
    - /.microsoft/usersecrets:/root/.microsoft/usersecrets:rw
  kanbersky.cleanarch.basket.api:
    build:
      context: D:\WorkSpaces\Back-end\Microservices\Kanbersky.CleanArch
      dockerfile: src/Basket/Kanbersky.CleanArch.Basket.Api/Dockerfile
    container_name: basketapi
    depends_on:
      basketdb:
        condition: service_started
      rabbitmq:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      RabbitMQSettings:HostName: rabbitmq
      RedisSettings:ConnectionString: basketdb:6379
    image: kanberskycleanarchbasketapi
    ports:
    - published: 8001
      target: 80
    restart: on-failure
  kanbersky.cleanarch.catalog.api:
    build:
      context: D:\WorkSpaces\Back-end\Microservices\Kanbersky.CleanArch
      dockerfile: src/Catalog/Kanbersky.CleanArch.Catalog.Api/Dockerfile
    container_name: catalogapi
    depends_on:
      catalogdb:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      CatalogDbSettings:ConnectionString: mongodb://catalogdb:27017
    image: kanberskycleanarchcatalogapi
    ports:
    - published: 8000
      target: 80
    restart: on-failure
    volumes:
    - /.aspnet/https:/root/.aspnet/https/:rw
    - /.microsoft/usersecrets:/root/.microsoft/usersecrets:rw
  kanbersky.cleanarch.order.api:
    build:
      context: D:\WorkSpaces\Back-end\Microservices\Kanbersky.CleanArch
      dockerfile: src/Order/Kanbersky.CleanArch.Order.Api/Dockerfile
    container_name: orderapi
    depends_on:
      orderdb:
        condition: service_started
      rabbitmq:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      OrderDbSettings:ConnecionStrings: Server=orderdb;Database=OrderDb;Trusted_Connection=True;MultipleActiveResultSets=True
      RabbitMQSettings:HostName: rabbitmq
    image: kanberskycleanarchorderapi
    ports:
    - published: 8002
      target: 80
    restart: on-failure
    volumes:
    - /.aspnet/https:/root/.aspnet/https/:rw
    - /.microsoft/usersecrets:/root/.microsoft/usersecrets:rw
  orderdb:
    container_name: orderdb
    image: mcr.microsoft.com/mssql/server
    ports:
    - published: 1433
      target: 1433
  rabbitmq:
    container_name: rabbitmq
    image: rabbitmq:3-management-alpine
    ports:
    - published: 5672
      target: 5672
    - published: 15672
      target: 15672
    restart: always
version: '3.4'